<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backgraund"
    tools:context=".Main_Menu">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerRatingMainMenu"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        app:layoutManager="LinearLayoutManager">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:layout_marginTop="100dp"
                android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ваш рейтинг"
        android:layout_marginBottom="10dp"/>

    <TextView

        android:id="@+id/textRatingMain_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/buttonGameMain_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/main_menuButtonExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button" />

</LinearLayout>