<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgraund"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginVertical="50dp"
            android:ems="100"
            android:text="Быки и коровы!"
            android:gravity="center"/>

        <EditText
            android:id="@+id/emailActivityMain"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:ems="100"
            android:inputType="textEmailAddress"
            android:layout_marginHorizontal="10dp"/>

        <EditText
            android:id="@+id/passwordActivityMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="100"
            android:inputType="textPassword"
            android:layout_marginHorizontal="10dp"
            />

        <Button
            android:id="@+id/buttonAutoriActivityMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            android:ems="100"
            android:layout_marginHorizontal="10dp"/>

        <Button
            android:id="@+id/buttonRegistActivityMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            android:ems="100"
            android:layout_marginHorizontal="10dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>